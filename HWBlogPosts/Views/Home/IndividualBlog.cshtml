@model IndividualPostViewModel
<div class="row">
    <div class="col-lg-8">
        <h1 class="mt-4">@Model.BlogPost.Title</h1>
        <hr>
        <p>Posted on @Model.BlogPost.Date.ToLongDateString()</p>

        <hr>

        <p>@Model.BlogPost.Text</p>
        <hr>
        <!-- Comments Form -->
        <div class="card my-4">
            <h5 class="card-header">Leave a Comment:</h5>
            <div class="card-body">
                <form method="post" action="/home/individualblog">
                    <input type="hidden" value=@Model.BlogPost.Id name="blogpostId" />
                    <div class="form-group">
                        <input id="name" value="@Model.Name" type="text" placeholder="Please enter your name" class="form-control" name="name" />
                        
                    </div>
                    <div class="form-group">
                        <textarea placeholder="Type your comment here..." id="content" name="content" class="form-control" rows="3"></textarea>
                    </div>
                    <button id="submit" disabled class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
        @foreach (Comment c in Model.Comments)
        {
            <div class="media mb-4">
                <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
                <div class="media-body">
                    <h5 class="mt-0">
                        @c.Name
                        <small>@c.Date</small>
                    </h5>
                    @c.Content
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="/js/add-comment.js"></script>
}